{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "release": {
    "projectsRelationship": "independent",
    "changelog": {
      "automaticFromRef": true,
      "workspaceChangelog": true,
      "projectChangelogs": true
    },
    "version":{
      "generatorOptions": {
        "updateDependents": "auto"
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    }
  },
  "defaultBase": "main"
}